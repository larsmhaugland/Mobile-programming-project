<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderCompleteActivity">

    <TextView
        android:id="@+id/orderCompleteGreeting"
        android:layout_width="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Thanks for using Flagged!" />

    <!-- Add to Cart Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/returnToHomeButton"
        style="@style/RedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderCompleteGreeting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="back to store" />

</RelativeLayout>